{
  "version": 2,
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.js" },
    { 
      "source": "/(.*\\.(?:css|js|jpg|jpeg|gif|png|ico|svg|woff|woff2|ttf|eot|webmanifest|txt|xml))",
      "destination": "/$1"
    },
    { 
      "source": "/(.*)",
      "has": [
        {
          "type": "header",
          "key": "x-vercel-404",
          "value": "false"
        }
      ],
      "destination": "/index.html"
    },
    { 
      "source": "/(.*)", 
      "destination": "/404.html",
      "statusCode": 404
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Robots-Tag", "value": "index, follow" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" }
      ]
    },
    {
      "source": "/(.*\\.(?:ico|txt|xml|webmanifest|json|js|css|png|jpg|jpeg|gif|svg|woff|woff2|ttf|eot))",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
