rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Posts: anyone can read, only the admin email can write
    match /posts/{postId} {
      allow read: if true;
      
      // Create and update with tag validation
      allow create, update:
        if request.auth != null
        && request.auth.token.email == "pazpaz22@yahoo.com"
        // Tags validation
        && (request.resource.data.tags == null ||
            (request.resource.data.tags is list
             && request.resource.data.tags.size() <= 5));
      
      // Separate delete rule without tag validation
      allow delete:
        if request.auth != null
        && request.auth.token.email == "pazpaz22@yahoo.com";
    }

    // Tags collection for future tag management
    match /tags/{tagId} {
      allow read: if true;
      allow write:
        if request.auth != null
        && request.auth.token.email == "pazpaz22@yahoo.com";
    }

    // Everything else: read-only
    match /{document=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}